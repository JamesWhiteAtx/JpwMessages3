@{
    ViewBag.Title = "Read 3";
}

<style>
    [class^=col-] {
        /*background-color: #eee;
        background-color: rgba(86,61,124,.15);
        border: 1px solid #ddd;*/
        border: 1px solid rgba(86,61,124,.2);
    }

    .mail-row {
        margin-top: 5px;
        margin-bottom: 5px;
    }

    .truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

</style>

<h2>Read 3</h2>

<div class="row hidden-xs">
    <div class="col-md-11 col-md-offset-1 col-sm-11 col-sm-offset-1">
        <div class="row">
            <div class="col-md-2 col-sm-2">
                Sender
            </div>
            <div class="col-md-2 col-sm-2">
                Subject
            </div>
            <div class="col-md-6 col-sm-6">
                Message
            </div>
            <div class="col-md-2 col-sm-2">
                Date
            </div>
        </div>
    </div>
</div>

@for (int intI = 0; intI < 30; intI++)
{
    <div class="row mail-row">
        <div class="col-md-1 col-sm-1 col-xs-1">
            <input type="checkbox">
        </div>
        <div class="col-md-11 col-sm-11 col-xs-10">
            <div class="row">
                <div class="col-md-2 col-sm-2 col-xs-7">
                    Mr. Sender
                </div>
                <div class="col-md-2 col-sm-2 col-xs-5 col-md-push-8 col-sm-push-8">
                    10/14/1066
                </div>
                <div class="col-md-2 col-sm-2 col-md-pull-2 col-sm-pull-2">
                    Big News
                </div>
                <div class="col-md-6 col-sm-6 col-md-pull-2 col-sm-pull-2 truncate">
                    I am a deposed Ugandan Prince in need of some assistance from a very gullible American with too mush moneay and no sense
                </div>
            </div>
        </div>
    </div>
}
